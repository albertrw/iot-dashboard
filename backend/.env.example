# Server
HOST=127.0.0.1
PORT=4000

# PostgreSQL
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=iot_dashboard
DB_USER=iot_user
DB_PASSWORD=change_me

# Auth sessions (days)
SESSION_TTL_DAYS=7

# Password hashing (scrypt)
# SCRYPT_COST=16384
# SCRYPT_BLOCK_SIZE=8
# SCRYPT_PARALLELIZATION=1

# MQTT
MQTT_URL=mqtt://127.0.0.1:1883

# MQTT provisioning (optional)
# When enabled, the backend will create/update per-device Mosquitto users on claim:
#  - username = device_uid
#  - password = device_secret
MQTT_PROVISION_ENABLED=false
MQTT_PROVISION_SCRIPT=/usr/local/bin/iot-mqtt-provision
